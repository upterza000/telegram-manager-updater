# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_PARSE_MODE=MarkdownV2

# Google Drive Configuration
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
GOOGLE_DRIVE_CHECK_INTERVAL=300000

# FFmpeg Processing Settings
FFMPEG_QUALITY=medium
FFMPEG_PRESET=fast
FFMPEG_CRF=23
THUMBNAIL_TIME=00:00:01.000
THUMBNAIL_QUALITY=2

# File Processing Settings
MAX_FILE_SIZE=52428800
TEMP_DIR=/tmp
CLEANUP_ENABLED=true

# N8N Webhook Settings (Optional)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/telegram-webhook
WEBHOOK_SECRET=your_webhook_secret

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_STATS=true
STATS_RETENTION_DAYS=30

# Advanced Settings
CONCURRENT_PROCESSING=1
RETRY_ATTEMPTS=3
RETRY_DELAY=5000